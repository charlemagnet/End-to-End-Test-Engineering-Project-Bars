              "// Beklentimiz: İşlem başarısız olmalı (400 Bad Request)\r",
              "pm.test(\"Status code is 400 (Bad Request)\", function () {\r",
              "    pm.response.to.have.status(400);\r",
              "});\r",
              "\r",
              "// Hata mesajını kontrol et\r",
              "var jsonData = pm.response.json();\r",
              "pm.test(\"Hata mesaji dogru mu?\", function () {\r",
              "    // API'den dönen hata mesajının içinde 'Invalid' kelimesi geçmeli\r",
              "    pm.expect(jsonData.detail).to.include(\"Invalid\");\r",
              "});"
